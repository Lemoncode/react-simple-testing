    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-hot-loader": "^3.1.3",
    "react-router-dom": "^4.2.2",
    "toastr": "^2.1.2",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.0.5",
    "@types/enzyme": "^3.1.4",
    "@types/karma-chai-sinon": "^0.1.7",
    "@types/material-ui": "^0.18.4",
    "@types/mocha": "^2.2.44",
    "@types/react": "^16.0.24",
    "@types/react-dom": "^16.0.3",
    "@types/react-router-dom": "^4.2.1",
